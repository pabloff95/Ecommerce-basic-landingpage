{{page-title "Shopping cart"}}

    <h1 class="container mt-5">Shopping cart</h1>
    <Container>
        {{#each this.cart.itemList as |item|}}
            <div class="cart-item">  
                <img src="{{item.image}}" alt="{{item.name}}">              
                <span class="cart-item-name">{{item.name}}</span>
                <span class="cart-item-price">{{currency item.price sign='€'}}</span>                
                <input type="number" class="cart-item-number" 
                    value={{item.count}} 
                    {{on "input" (fn this.updateItemCount item)}}
                    />
            </div>
        {{/each}}
        <section class="w-50 ml-auto text-right mb-5">
            <div class="row">
                <span class="col">Subtotal</span>
                <span class="col">{{currency this.subtotal sign='€'}}</span>
            </div>
            <div class="row">
                <span class="col">Tax</span>
                <span class="col">{{currency this.tax sign="€"}}</span>
            </div>
            <div class="row">
                <span class="col">Total</span>
                <span class="col">{{currency this.total sign="€"}}</span>
            </div>
        </section>        
        <button type="button" class="btn btn success float-right bg-info text-white">Check out</button>
    </Container>

{{outlet}}